@using InvestmentWallet.Domain.Entities
@model InvestmentWallet.Presentation.Models.CarteiraIndexModel
@{
    ViewData["Title"] = "Carteiras";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<nav class="navbar navbar-expand-lg bg-info mt-5">
  <div class="container-fluid">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Index">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
      </ol>
    </nav>
  </div>
</nav>
<section class="mt-3">
    <table class="table table-hover table-striped">
        <thead class="bg-transparent text-white">
            <tr>
                <th>#</th>
                <th>Nome da Carteira</th>
                <th>Descrição da Carteira</th>
                <th>Operações</th>
                <th><a href="/Carteira/Criar" class="btn btn-info text-black">Adicionar carteira</a></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Carteiras.Count > 0)
            {
                int i = 1;
                @foreach (Carteira carteira in Model.Carteiras)
                {
                    <tr class="table-dark">
                        <td>@i</td>
                        <td>@carteira.Nome</td>
                        <td>@carteira.Descricao</td>
                        <td>@carteira.Operacoes.Count()</td>
                        <td>
                            <a href="/Carteira/Detalhes?id=@carteira.IdCarteira" class="btn btn-light">Detalhes</a>
                            <a href="/Carteira/Editar?id=@carteira.IdCarteira" class="btn btn-outline-warning">Editar</a>
                            <a href="/Carteira/Excluir?id=@carteira.IdCarteira" class="btn btn-outline-danger">Excluir</a>
                        </td>
                    </tr>
                    i ++;
                }
            }else {
                <strong>Você não possui carteiras ainda.</strong>
            }

        </tbody>
</table>
</section>
